{
  "auto_compact_threshold": 75,
  "subagent_defaults": {
    "always_require_proof": true,
    "mock_tests_forbidden": true,
    "consensus_minimum": 2
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-commit.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit.sh",
            "timeout": 15
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/stop-validation.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "validation": {
    "runtime_monitoring": true,
    "failure_capture": true,
    "checkpoint_required": true,
    "proof_requirements": {
      "screenshots": true,
      "test_results": true,
      "security_scan": true,
      "performance_check": true
    }
  },
  "security": {
    "require_validation_before_commit": true,
    "validation_token_expires_hours": 1,
    "block_critical_vulnerabilities": true
  }
}
